<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @article.created_at.strftime("%A, %b %d") %></p>
    <h1><%= @article.title.titleize %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @article.content %>
  </div>

  <% if  user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Article", edit_article_path(@article) %>
      <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>
    </div>
  <% end %>

  <hr>

  <div id="share_box">
    <p>Share this article</p>
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= article_url(@article) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><span class="icon-facebook2 facebook"></span></a>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @article.title %> by @Hibino7Ken - &amp;url=<% article_url(@article) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><span class="icon-twitter twitter"></span></a>
    <a onclick="javascript:window.open('http://plus.google.com/share?url=<%= article_url(@article) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"><span class="icon-google-plus google-plus"></span></a>
  </div>

  <hr>

  <%= render 'disqus', object: @article %>

</div>





























