<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <br>

  <%= f.label :keywords, "Enter keywords (comman separated)" %><br>
  <%= f.text_field :keywords %>

  <br>

  <%= f.label :content, "Write your article here" %><br>
  <%= f.text_area :content %>

  <br>

  <%= f.submit "Publish" %>

<% end %>