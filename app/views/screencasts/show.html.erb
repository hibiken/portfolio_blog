<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @screencast.created_at.strftime("%A, %b %d") %></p>
    <h1><%= @screencast.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @screencast.description %>
  </div>

  <hr>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_screencast_path(@screencast) %>
      <%= link_to "Delete", screencast_path(@screencast), method: :delete, data: { confirm: "Are you sure you want to delete this screencast?" } %>
    </div>
  <% end %>
</div>
